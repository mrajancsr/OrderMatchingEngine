{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "C/C++: g++ build active file",
			"type": "shell",
			"command": "/usr/bin/g++",
			"args": [
				"-std=c++20", // or "c++23"
				"-g",
				"${file}",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [
				"$gcc"
			],
			"detail": "Compile active C++ file using g++"
		}
	]
}